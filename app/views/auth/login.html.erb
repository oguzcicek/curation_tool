<% content_for :title, "Login" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Login</h4>
        </div>
        <div class="card-body">
          <%= form_with url: login_path, method: :post do |form| %>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <%= form.text_field :username, class: "form-control", id: "username", autocomplete: "off", autofocus: true, required: true %>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <%= form.password_field :password, class: "form-control", id: "password", required: true %>
            </div>
            
            <div class="d-grid">
              <%= form.submit "Login", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted text-center">
          <small>Text Mapping Curator</small>
        </div>
      </div>
    </div>
  </div>
</div> 